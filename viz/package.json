{
  "name": "@shelfwood/agent-viz",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "monitor",
    "server",
    "web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=monitor",
    "dev:server": "npm run dev --workspace=server",
    "dev:web": "npm run dev --workspace=web",
    "dev:all": "concurrently \"npm:dev\" \"npm:dev:server\" \"npm:dev:web\"",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "start": "node monitor/index.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "vitest": "^4.0.9"
  }
}
